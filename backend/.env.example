# 通义千问 API 配置
DASHSCOPE_API_KEY=your_dashscope_api_key_here
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
DASHSCOPE_MODEL=qwen-plus
DASHSCOPE_SYSTEM_CONTENT=你是一个有用的AI助手，基于用户的回忆录内容与用户进行对话。

# 数据库配置
DB_PATH=./database.sqlite

# JWT配置
JWT_SECRET=your_jwt_secret_key_here

# 服务器配置
PORT=3001
NODE_ENV=development

# 阿里云配置（语音识别服务）
# 获取方式：https://ram.console.aliyun.com/manage/ak
ALIYUN_AK_ID=your_aliyun_access_key_id_here
ALIYUN_AK_SECRET=your_aliyun_access_key_secret_here
ALIYUN_REGION=cn-shanghai
ALIYUN_APP_KEY=your_aliyun_app_key_here

# 百度语音识别配置
# 获取方式：https://console.bce.baidu.com/ai/#/ai/speech/overview/index
BAIDU_SPEECH_APP_ID=your_baidu_app_id_here
BAIDU_SPEECH_API_KEY=your_baidu_api_key_here
BAIDU_SPEECH_SECRET_KEY=your_baidu_secret_key_here
